<h2>Your cart</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">items</th>
        </tr>
    <thead>
    <tbody>
        <% total_price = 0%>
        <% total_qty = 0%>
        <% @items.each do |item|%>
            <tr>
                <th scope="row"><%= item[0].id %></th>
                <td><%= item[0].title %></td>
                <td><%= item[0].price %> RUB</td>
                <td><%= item[1] %> Qty</td>
            </tr>
            <%= total_qty += item[1].to_i%>
            <%= total_price += item[0].price * item[1].to_i%>
        <% end %>
        <tr>
                <th></th>
                <td></td>
                <td>Total: <%= total_price %> RUB</td>
                <td><%= total_qty %> Qty</td>
        </tr>
    </tbody>
</table>