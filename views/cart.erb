<h2>Your cart</h2>
<div id="cart">
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">items</th>
        </tr>
    <thead>
    <tbody>
        <% total_price = 0%>
        <% total_qty = 0%>
        <% @items.each do |item|%>
            <tr>
                <th scope="row"><%= item[0].id %></th>
                <td><%= item[0].title %></td>
                <td><%= item[0].price %> RUB</td>
                <td><%= item[1] %> Qty</td>
            </tr>
            <% total_qty += item[1].to_i %>
            <% total_price += item[0].price * item[1].to_i %>
        <% end %>
        <tr>
                <th></th>
                <td></td>
                <td>Total: <%= total_price %> RUB</td>
                <td><%= total_qty %> Qty</td>
        </tr>
    </tbody>
</table>
</div>

<form action="/place_order" method="POST">
    
   <input name="order[orders_input]" type="hidden" value="<%= @orders_input %>">
   
   <div class="mb-3">
    <label for="user_n" class="form-label">Name</label>
    <input name="order[name]" value="" type="phone" class="form-control" id="user_n" placeholder="Enter your Name" >
  </div>
  
  <div class="mb-3">
    <label for="phone_n" class="form-label">Phone number</label>
    <input name="order[phone]" value="" type="login" class="form-control" id="phone_n" placeholder="+1()" >
  </div>

  <div class="mb-3">
    <label for="address" class="form-label">Delivery Address</label>
    <input name="order[address]" value="" type="phone" class="form-control" id="address" placeholder="Enter your address" >
  </div>

  <br>
  <button type="submit" class="btn btn-success">Enroll</button>
  <button class="btn btn-danger" onclick="return cancel_order()">Cancel</button>
</form>